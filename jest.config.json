{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": ["<rootDir>/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "middleware/**/*.js", 
    "models/**/*.js",
    "routes/**/*.js"
  ],
  "coverageDirectory": "coverage",
  "verbose": true,
  "testTimeout": 30000,
  "transform": {}
}
